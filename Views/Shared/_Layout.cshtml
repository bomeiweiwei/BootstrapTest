<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        body {
            padding-top: 70px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <!-- Brand/logo -->
        <a class="navbar-brand" href="@Url.Action("Index")">
            <img src="~/images/bird.jpg" alt="logo" style="width:40px;" class="rounded-circle">
        </a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav">
                @Html.ActionLink("首頁", "Index", "Home", new { area = "" }, new { @class = "nav-item nav-link active" })
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">功能</a>
                    <div class="dropdown-menu">
                        @Html.ActionLink("表格1", "Table1", "Home", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("書籍", "BookInfo", "Home", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("書籍上架表單", "CreateBook", "Home", new { area = "" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("媒體物件", "MediaInfo", "Home", new { area = "" }, new { @class = "dropdown-item" })
                    </div>
                </div>
            </div>
            <form class="form-inline ml-auto">
                <input type="text" name="SearchInfo" id="txtSearch" class="form-control mr-sm-2" placeholder="Search">
                <button type="submit" class="btn btn-outline-light">Search</button>
            </form>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
