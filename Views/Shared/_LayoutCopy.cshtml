<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>    
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        body {
            padding-top: 70px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
            <a class="navbar-brand" href="@Url.Action("Index")">
                <img src="~/images/bird.jpg" alt="logo" style="width:40px;">
            </a>
            <!-- 漢堡選單 -->
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarItem">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarItem">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">首頁</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">關於</a>
                    </li>
                    @*<li class="nav-item">
                <a class="nav-link" href="#">書籍</a>
            </li>*@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">書籍</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">書籍1</a>
                            <a class="dropdown-item" href="#">書籍2</a>
                            <a class="dropdown-item" href="#">書籍3</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">服務</a>
                    </li>
                </ul>
                <form class="form-inline ml-auto">
                    <input type="text" name="SearchInfo" id="txtSearch" class="form-control mr-2 my-2" placeholder="Search">
                    <button type="submit" class="btn btn-outline-success">Search</button>
                </form>
            </div>
        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
